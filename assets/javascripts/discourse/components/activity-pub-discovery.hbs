<div class="activity-pub-discovery">
  <DButton
    @action={{action "toggleDropdown"}}
    @class="no-text"
    @icon="discourse-activity-pub"
  />
  {{#if showDropdown}}
    <div class="activity-pub-discovery-dropdown">
      <span>{{i18n "discourse_activity_pub.discovery.description" category_name=@category.name}}</span>
      <ActivityPubHandle @model={{@category}} />
    </div>
  {{/if}}
</div>