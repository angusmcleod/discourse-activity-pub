<DModal
  @closeModal={{@closeModal}}
  @title={{this.title}}
  class="activity-pub-post-info-modal"
>
  <:body>
    <div class="activity-pub-post-info-list">
      <span class="activity-pub-state">{{d-icon
          this.stateIcon
        }}{{this.stateText}}</span>
      {{#if this.showVisibility}}
        <span class="activity-pub-visibility">{{d-icon
            this.visibilityIcon
          }}{{this.visibilityText}}</span>
      {{/if}}
      {{#if this.showUrl}}
        <span class="activity-pub-url">
          <a
            href={{@model.post.activity_pub_url}}
            target="_blank"
            rel="noopener noreferrer"
          >
            {{d-icon "up-right-from-square"}}
            {{this.urlText}}
          </a>
        </span>
      {{/if}}
      {{#if this.showDelivered}}
        <span class="activity-pub-delivered">{{d-icon
            "envelope"
          }}{{this.deliveredText}}</span>
      {{/if}}
    </div>
  </:body>

  <:footer>
    {{#if this.showObjectId}}
      <DButton
        @icon="link"
        @action={{this.copyObjectId}}
        @translatedTitle={{this.copyObjectIdTitle}}
        @translatedLabel={{this.copyObjectIdLabel}}
        class="activity-pub-object-id-copy"
      >
        {{#if this.copiedObjectId}}
          <div class="activity-pub-object-id-copy-text">
            {{i18n "post.discourse_activity_pub.info.copy_uri.copied"}}
          </div>
        {{/if}}
      </DButton>
    {{/if}}
  </:footer>
</DModal>