<DModal
  @closeModal={{@closeModal}}
  @title={{this.title}}
  class="activity-pub-post-admin-modal"
>
  <:body>
    <ActivityPubAdminInfo
      @post={{this.post}}
      @topic={{this.topic}}
      @context="post"
    />
    <ActivityPubPostActions @post={{this.post}} />
  </:body>
  <:footer>
    <DButton
      @icon="circle-info"
      @label="post.discourse_activity_pub.info.label"
      @action={{this.showInfo}}
      class="show-info"
    />
  </:footer>
</DModal>